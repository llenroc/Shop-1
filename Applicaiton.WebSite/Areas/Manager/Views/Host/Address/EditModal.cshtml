<div class="dialog">
    <div class="header">
        <div class="container-responsive">
            <h5 class="title">@L("Address")</h5>
            <button class="button-icon button-close">¡Á</button>
        </div>
    </div>
    <div class="body">
        <form class="container-responsive form-horizontal" name="addressEditForm" novalidate>
            <h3>@L("AddressEditHeaderInfo")</h3>
            <div class="form-group">
                <label class="form-group-key column-2">@L("Name")</label>
                <div class="form-group-block column-8">
                    <div class="input-wrapper line">
                        <input type="text" name="name" ng-model="vm.address.name" disabled>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="form-group-key column-2">@L("DevelopLevel")</label>
                <div class="form-group-block column-8">
                    <div class="switcher">
                        <label>
                            <input type="radio" name="developLevel" ng-value="0" ng-model="vm.address.developLevel" required />
                            <span>@L("Normal")</span>
                        </label>
                        <label>
                            <input type="radio" name="developLevel" ng-value="1" ng-model="vm.address.developLevel" required />
                            <span>@L("Developed")</span>
                        </label>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="footer">
        <div class="container-responsive">
            <button class="button-text button-close">@L("Close")</button>
            <button class="button-text primary button-ok" ng-click="vm.createOrEdit()" ng-disabled="addressEditForm.$invalid">
                <i class="icon-save"></i> <span>@L("SaveAndClose")</span>
            </button>
        </div>
    </div>
</div>