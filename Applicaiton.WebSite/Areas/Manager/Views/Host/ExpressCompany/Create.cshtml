<div ng-controller="app.manager.expressCompany.create as vm">
    <form name="expressCompanyCreateForm" novalidate>
        <div class="form-group">
            <label class="form-group-key">@L("Name")</label>
            <div class="form-group-block">
                <div class="input-wrapper line">
                    <select name="name"
                            ng-model="vm.expressCompany.name"
                            required
                            ng-options="expressCompany.name as expressCompany.name for expressCompany in vm.expressCompanys">
                        <option value="">-- @L("PleaseSelect") --</option>
                    </select>
                </div>
                <p class="validate-message error" ng-show="expressCompanyCreateForm.name.$error.required">@L("NameIsRequired")</p>
            </div>
        </div>
        <div class="form-group">
            <label class="form-group-key">@L("Icon")</label>
            <div class="form-group-block">
                <div class="picture-uploader"
                     picture-uploader
                     path="vm.expressCompany.icon"
                     data-option-url="/Manager/Home/Upload"
                     data-option-default-image="/Content/frame/canknow/image/upload-picture.png">
                    <img height="128" ng-src="{{vm.expressCompany.icon}}" />
                    <input type="file" />
                    <input type="hidden" name="icon" required ng-model="vm.expressCompany.icon" />
                </div>
                <p class="validate-message error" ng-show="expressCompanyCreateForm.icon.$error.required">@L("IconIsRequired")</p>
            </div>
        </div>
        <button type="submit" class="button-text block primary" ng-click="vm.create()" ng-disabled="expressCompanyCreateForm.$invalid">@L("Create")</button>
    </form>
</div>
<script src="~/Scripts/aicha/expressCompanys.js"></script>