@using Application.Localization
<div ng-controller="app.manager.host.language.texts as vm">
    <form id="auditLogFilterForm" class="form-horizontal">
        <div class="row">
            <div class="column-2-5 padding-base">
                <div class="form-group">
                    <label class="form-group-key column-2">@L("BaseLanguage")</label>
                    <div class="form-group-block column-8">
                        <select id="TextBaseLanguageSelectionCombobox" ng-model="vm.baseLanguageName">
                            <option ng-repeat="language in vm.languages" value="{{language.name}}">
                                <i class="{{language.icon}}"></i>{{language.displayName}}
                            </option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="column-2-5">
                <div class="form-group padding-base">
                    <label class="form-group-key column-2">@L("TargetLanguage")</label>
                    <div class="form-group-block column-8">
                        <select id="TextTargetLanguageSelectionCombobox"
                                class="form-control"
                                ng-model="vm.targetLanguageName">
                            <option ng-repeat="language in vm.languages"  value="{{language.name}}">
                                {{language.displayName}}
                            </option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="column-2-5">
                <div class="form-group padding-base">
                    <label class="form-group-key column-2">@L("Source")</label>
                    <div class="form-group-block column-8">
                        <select id="TextSourceSelectionCombobox"
                                class="form-control bs-select"
                                ng-model="vm.sourceName"
                                ng-options="sourceName for sourceName in vm.sourceNames"></select>
                    </div>
                </div>
            </div>
            <div class="column-2-5">
                <div class="form-group padding-base">
                    <label class="form-group-key column-2">@L("TargetValue")</label>
                    <div class="form-group-block column-8">
                        <select id="TargetValueFilterSelectionCombobox"
                                class="form-control bs-select"
                                ng-model="vm.targetValueFilter">
                            <option value="ALL">@L("All")</option>
                            <option value="EMPTY">@L("EmptyOnes")</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="input-wrapper">
                <input ng-model="vm.filterText" auto-focus placeholder="@L("SearchWithThreeDot")" type="text">
            </div>
        </div>
        <div class="row">
            <button class="button-text icon block primary" ng-click="vm.getLanguageTexts()"><i class="icon icon-refresh"></i>@L("Search")</button>
        </div>
    </form>


    <table class="table table-striped table-hover table-bordered" id="languageTextsTable">
        <thead>
            <tr>
                <th>@L("Key")</th>
                <th>@L("BaseValue")</th>
                <th>@L("TargetValue")</th>
                <th>@L("Actions")</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="languageText in vm.languageTexts">
                <td>{{languageText.key}}</td>
                <td>{{languageText.baseValue}}</td>
                <td>{{languageText.targetValue}}</td>
                <td>
                    <button ng-click="vm.openTextEditModal(languageText)" class="button-text small info border">@L("Edit")</button>
                </td>
            </tr>
        </tbody>
    </table>
</div>