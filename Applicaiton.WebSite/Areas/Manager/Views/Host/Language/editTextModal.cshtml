<div class="dialog">
    <div class="header">
        <div class="container-responsive">
            <h5 class="title">@L("EditText")</h5>
            <button class="button-icon button-close">¡Á</button>
        </div>
    </div>
    <div class="body">
        <div class="container-responsive">
            <form name="languageTextEditForm" novalidate class="form-validation">
                <h3>{{vm.editingText.key}}</h3>
                <div class="row">
                    <div class="column-5 form-group">
                        <label class="form-group-key"><i ng-class="vm.findFlag(vm.baseLanguageName)"></i> {{vm.findDisplayName(vm.baseLanguageName)}} </label>
                        <div class="form-group-block">
                            <textarea readonly rows="4" ng-model="vm.editingText.baseValue"></textarea>
                        </div>
                    </div>
                    <div class="column-5 form-group">
                        <label class="form-group-key"><i ng-class="vm.findFlag(vm.languageName)"></i> {{vm.findDisplayName(vm.languageName)}} </label>
                        <div class="form-group-block">
                            <textarea auto-focus rows="4" ng-model="vm.editingText.targetValue"></textarea>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="footer">
        <div class="container-responsive">
            <button ng-disabled="vm.saving || vm.currentIndex == 0" class="button-text" ng-click="vm.previous()"><i class="icon-long-arrow-left"></i> <span>@L("Previous")</span></button>
            <button type="button" class="button-text border circle danger button-close">@L("Close")</button>
            <button type="button" class="button-text border circle primary"  ng-click="vm.saveAndClose()" ng-disabled="languageTextEditForm.$invalid"><i class="icon-save"></i> <span>@L("SaveAndClose")</span></button>
            <button type="button" ng-disabled="vm.currentIndex >= (vm.allTexts.length-1)" class="button-text border circle primary" ng-click="vm.saveAndNext()"><span>@L("SaveAndNext")</span> <i class="icon-long-arrow-right"></i></button>
        </div>
    </div>
</div>