<div ng-controller="app.manager.host.maintenance.index as vm">
    <div class="view-page-head">
        <h1 class="view-page-title">
            <span>@L("Maintenance")</span> <small>@L("MaintenancesHeaderInfo")</small>
        </h1>
    </div>
    <div class="tab" data-ride="tab">
        <ul class="tab-nav-list">
            <li class="actived">
                <a>@L("Caches")</a>
            </li>
            <li>
                <a>@L("WebSiteLogs")</a>
            </li>
        </ul>
        <div class="tab-box">
            <div class="tab-page">
                <table class="table table-striped table-hover table-bordered">
                    <thead>
                        <tr>
                            <th>@L("Name")</th>
                            <th>@L("Actions")</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="cache in vm.caches">
                            <td><span>{{cache.name}}</span></td>
                            <td>
                                <button class="button-text small" ng-click="vm.clearCache(cache.name);">@L("Clear")</button>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <button class="button-text" ng-click="vm.clearAllCaches()"><i class="icon icon-refresh"></i>@L("ClearAll")</button>
            </div>
            <div class="tab-page">
                <ul class="web-log-view full-height" ng-bind-html="vm.logs"></ul>
                <button class="button-text info" ng-click="vm.downloadWebLogs()"><i class="icon icon-download"></i> @L("DownloadAll")</button>
                <button class="button-text success" ng-click="vm.getWebLogs()"><i class="icon icon-refresh"></i> @L("Refresh")</button>
            </div>
        </div>
    </div>
</div>
<link rel="stylesheet" href="/Styles/App/Manager/Maintenance/index.css" />