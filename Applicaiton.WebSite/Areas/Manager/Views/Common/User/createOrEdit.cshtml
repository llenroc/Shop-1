<div ng-controller="app.manager.user.createOrEdit as vm">
    <div class="tab" data-ride="tab">
        <ul class="tab-nav-list">
            <li class="actived">
                <a>@L("UserInformations")</a>
            </li>
            <li>
                <a>@L("Roles")</a>
            </li>
			<li>
				<a>@L("Parent")</a>
			</li>
        </ul>
        <div class="tab-box">
            <div class="tab-page">
                <form name="userCreateOrEditForm" class="form-horizontal" novalidate>
                    <input type="hidden" name="id" value="vm.user.id" />
                    <div class="row">
                        <div class="column-2 text-center">
                            <div class="picture-uploader" picture-uploader path="vm.user.avatar" data-option-url="/Manager/Home/Upload">
                                <input type="file" />
                                <input type="hidden" name="avatar" ng-model="vm.user.avatar" />
                                <img ng-src="{{vm.user.avatar}}" width="128" height="128" class="imageCircle" />
                            </div>
                        </div>
                        <div class="column-8">
                            <div class="form-group">
                                <label class="form-group-key column-1">@L("FullName")</label>
                                <div class="form-group-block column-9">
                                    <div class="input-wrapper line"><input type="text" disabled ng-model="vm.user.fullName"></div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="form-group-key column-1">@L("Name")</label>
                                <div class="form-group-block column-9">
                                    <div class="input-wrapper line"><input name="name" type="text" ng-model="vm.user.name"></div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="form-group-key column-1">@L("Surname")</label>
                                <div class="form-group-block column-9">
                                    <div class="input-wrapper line"><input name="surname" type="text" ng-model="vm.user.surname"></div>
                                </div>
                            </div>
							<div class="form-group">
								<label class="form-group-key column-1">@L("NickName")</label>
								<div class="form-group-block column-9">
									<div class="input-wrapper line"><input name="nickName" type="text" ng-model="vm.user.nickName"></div>
								</div>
							</div>
                            <div class="form-group">
                                <label class="form-group-key column-1">@L("UserName")</label>
                                <div class="form-group-block column-9">
                                    <div class="input-wrapper line"><input type="text" name="userName" ng-model="vm.user.userName" required></div>
                                    <p class="validate-message error" ng-show="userCreateOrEditForm.userName.$error.required">@L("UserNameIsRequired")</p>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="form-group-key column-1">@L("EmailAddress")</label>
                                <div class="form-group-block column-9">
                                    <div class="input-wrapper line"><input name="emailAddress" type="text" ng-model="vm.user.emailAddress"></div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="form-group-key column-1">@L("IsSpreader")</label>
                                <div class="form-group-block column-9">
                                    <div class="switcher">
                                        <label><input type="radio" name="isSpreader" ng-value="true" ng-model="vm.user.isSpreader" required /><span>@L("Yes")</span></label>
                                        <label><input type="radio" name="isSpreader" ng-value="false" ng-model="vm.user.isSpreader" required /><span>@L("No")</span></label>
                                    </div>
                                    <p class="validate-message error" ng-show="userCreateOrEditForm.isSpreader.$error.required">@L("IsSpreaderIsRequired")</p>
                                </div>
                            </div>
							<div class="form-group">
								<label class="form-group-key column-1">@L("Sales")</label>
								<div class="form-group-block column-9">
									<div class="input-wrapper line"><input type="text" ng-model="vm.user.sales"></div>
								</div>
							</div>
                            <div class="form-group">
                                <label class="form-group-key column-1">@L("IsActive")</label>
                                <div class="form-group-block column-9">
                                    <div class="switcher">
                                        <label><input type="radio" name="isActive" ng-value="true" ng-model="vm.user.isActive" required /><span>@L("Yes")</span></label>
                                        <label><input type="radio" name="isActive" ng-value="false" ng-model="vm.user.isActive" required /><span>@L("No")</span></label>
                                    </div>
                                </div>
                            </div>
							<div class="form-group">
								<label class="form-group-key column-1">@L("IsHide")</label>
								<div class="form-group-block column-9">
									<div class="switcher">
										<label><input type="radio" name="isHide" ng-value="true" ng-model="vm.user.isHide" required /><span>@L("Yes")</span></label>
										<label><input type="radio" name="isHide" ng-value="false" ng-model="vm.user.isHide" required /><span>@L("No")</span></label>
									</div>
								</div>
							</div>
                            <div class="form-group">
                                <label class="form-group-key column-1">@L("SetRandomPassword")</label>
                                <div class="form-group-block column-9">
                                    <div class="switcher">
                                        <label><input type="radio" name="setRandomPassword" ng-value="true" ng-model="vm.setRandomPassword" required /><span>@L("Yes")</span></label>
                                        <label><input type="radio" name="setRandomPassword" ng-value="false" ng-model="vm.setRandomPassword" required /><span>@L("No")</span></label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="form-group-key column-1">@L("SendActivationEmail")</label>
                                <div class="form-group-block column-9">
                                    <div class="switcher">
                                        <label><input type="radio" name="sendActivationEmail" ng-value="true" ng-model="vm.sendActivationEmail" required /><span>@L("Yes")</span></label>
                                        <label><input type="radio" name="sendActivationEmail" ng-value="false" ng-model="vm.sendActivationEmail" required /><span>@L("No")</span></label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group" ng-if="!vm.setRandomPassword">
                                <div class="form-group">
                                    <label class="form-group-key column-1">@L("Password")</label>
                                    <div class="form-group-block column-9">
                                        <div class="input-wrapper line">
                                            <input type="password" ng-model="vm.user.password"
                                                    ng-required="!vm.user.id && !vm.setRandomPassword"
                                                    maxlength="@Application.Authorization.Users.User.MaxPlainPasswordLength">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="form-group-key column-1">@L("ShouldChangePasswordOnNextLogin")</label>
                                <div class="form-group-block column-9">
                                    <div class="switcher">
                                        <label><input type="radio" name="shouldChangePasswordOnNextLogin" ng-value="true" ng-model="vm.user.shouldChangePasswordOnNextLogin" required /><span>@L("Yes")</span></label>
                                        <label><input type="radio" name="shouldChangePasswordOnNextLogin" ng-value="false" ng-model="vm.user.shouldChangePasswordOnNextLogin" required /><span>@L("No")</span></label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="tab-page">
                <div class="checkbox-list">
                    <label class="checkbox" ng-repeat="role in vm.roles">
                        <input type="checkbox" name="{{role.roleName}}" ng-model="role.isAssigned">
                        <span class="check"></span>
                        <span class="caption">{{role.roleDisplayName}}</span>
                    </label>
                </div>
            </div>
			<div class="tab-page">
				<div ng-if="vm.user.parentUser">
					<div class="profileItem">
						<div class="profileItemAvatarBox">
							<img width="64" class="profileItemAvatarBox imageCircle" ng-src="{{vm.user.parentUser.avatar}}"/>
						</div>
						<div class="profileItemBody">
							<h5 class="profileItemName">{{vm.user.parentUser.nickName}}</h5>
							<h5 class="profileItemAdditionalProperty">{{vm.user.parentUser.userName}}</h5>
						</div>
					</div>
				</div>
			</div>
            <button class="button-text block" ng-click="vm.save()" ng-disabled="userCreateOrEditForm.$invalid">@L("Save")</button>
        </div>
    </div>
</div>