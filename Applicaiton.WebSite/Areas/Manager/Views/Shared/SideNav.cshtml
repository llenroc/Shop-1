<ul id="sidebar" class="width-em30 page-sidebar navbar-collapse collapse show sidenav" data-keep-expanded="false" data-auto-scroll="true" data-slide-speed="200" ng-if="vm.menu.items.length">
    <!-- Menu Level 1 -->
    <li class="nav-item" ng-repeat="menuItem in vm.menu.items" ui-sref-active="active" ng-class="{'start':$first}">

        <div class="title-block" ng-if="!menuItem.items.length">
            <i class="{{menuItem.icon}}"></i>
            <a class="title" ui-sref="{{menuItem.url}}">
                {{menuItem.displayName}}
            </a>
        </div>
        <h5 class="title" ng-if="menuItem.items.length">{{menuItem.displayName}}</h5>
        <ul class="sub-menu" ng-if="menuItem.items.length">
            <!-- Menu Level 2 -->
            <li ng-repeat="childMenuItem in menuItem.items" ui-sref-active="active" ng-class="{'start':$first}">

                <div class="title-block" ng-if="!childMenuItem.items.length">
                    <i class="{{childMenuItem.icon}}"></i>
                    <a class="title" ui-sref="{{childMenuItem.url}}">
                        {{childMenuItem.displayName}}
                    </a>
                </div>
                <h5 class="title" ng-if="childMenuItem.items.length">{{childMenuItem.displayName}}</h5>
            </li>
        </ul>
    </li>
</ul>