@using Application.Localization
<div ng-controller="app.manager.globalRebate.index as vm">
    <div class="view-page-head margin-bottom-5">
        <h1 class="view-page-title">
            <span>@L("GlobalRebates")</span> <small>@L("GlobalRebatesHeaderInfo")</small>
        </h1>
        <a class="button-text primary" ng-click="vm.openCreateOrEditModal()"><i class="icon-plus"></i> @L("CreateGlobalRebate")</a>
    </div>
    <div class="portlet light">
        <div class="responsive-table-container">
            <table class="table table-bordered table-striped table-hover" id="globalRebateTable">
                <thead>
                    <tr>
						<th>@L("Avatar")</th>
                        <th>@L("NickName")</th>
						<th>@L("Money")</th>
						<th>@L("Ratio")</th>
                        <th>@L("CreationTime")</th>
                        <th>@L("Actions")</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="globalRebate in vm.globalRebates">
						<td><img class="circle" width="32" ng-src="{{globalRebate.user.avatar}}"/></td>
                        <td>{{globalRebate.user.nickName}}</td>
						<td>{{globalRebate.money}}</td>
						<td>{{globalRebate.ratio}}</td>
                        <td>{{globalRebate.creationTime|momentFormat: 'YYYY-MM-DD HH:mm:ss'}}</td>
                        <td>
                            <div class="dropdown-wripper dropdown-menu">
                                <a data-toggle="dropdown" class="button-text">@L("Actions")<i class="icon icon-angle-down dropdown-sign"></i></a>
                                <ul class="dropdown dropdown-menu-list left hide" data-ride="dropdown">
                                    <li><a ng-click="vm.openCreateOrEditModal(globalRebate.id)">@L("Edit")</a></li>
                                    <li><a ng-click="vm.delete(globalRebate)">@L("Delete")</a></li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>