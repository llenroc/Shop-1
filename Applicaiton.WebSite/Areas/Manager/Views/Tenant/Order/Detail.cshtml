                            <li class="row">
                                <div class="column-2-5">@L("Level")</div>
                                <div class="column-7-5">{{orderDistribution.distribution.level}}</div>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="tab-page">
                <ul class="list-unstyled">
                    <li ng-repeat="orderDistribution in vm.order.orderAreaAgentDistributions">
                        <div class="profileItem padding-1 bg-color-grayLight">
                            <div class="profileItemAvatarBox">
                                <img width="48" height="48" class="profileTtemAvatar imageCircle" ng-src="{{orderDistribution.user.avatar}}">
                            </div>
