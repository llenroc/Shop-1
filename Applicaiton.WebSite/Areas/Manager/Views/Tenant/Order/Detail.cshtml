                                <div class="column-7-5">{{orderDistribution.distribution.level}}</div>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="tab-page">
                <ul class="list-unstyled">
                    <li ng-repeat="areaAgentRebate in vm.order.areaAgentRebates">
                        <div class="profileItem padding-1 bg-color-grayLight">
                            <div class="profileItemAvatarBox">
                                <img width="48" height="48" class="profileTtemAvatar imageCircle" ng-src="{{areaAgentRebate.user.avatar}}">
                            </div>
                            <div class="profileItemBody">
                                <h6 class="profileItemName thin">{{areaAgentRebate.user.nickName}}</h6>
                            </div>
                        </div>
                        <ul class="info-list">
                            <li class="row">
                                <div class="column-2-5">@L("RebateMoney")</div>
                                <div class="column-7-5">{{areaAgentRebate.money}}</div>
                            </li>
                            <li class="row">
                                <div class="column-2-5">@L("Remark")</div>
                                <div class="column-7-5">{{areaAgentRebate.remark}}</div>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="tab-page">
                <ul class="list-unstyled">
                    <li ng-repeat="channelAgentRebate in vm.order.channelAgentRebates">
