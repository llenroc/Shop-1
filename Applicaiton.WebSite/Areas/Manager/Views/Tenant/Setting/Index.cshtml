<div ng-controller="app.manager.tenant.setting.index as vm">
	<div class="view-page-head">
		<h1 class="view-page-title">
			<span>@L("Settings")</span> <small>@L("SettingsHeaderInfo")</small>
		</h1>
	</div>
	<form class="tab form-horizontal" data-ride="tab">
		<ul class="tab-nav-list">
			<li class="actived">
				<a>@L("Shop")</a>
			</li>
			<li>
				<a>@L("Order")</a>
			</li>
            <li>
                <a>@L("Spread")</a>
            </li>
		</ul>
		<div class="tab-box">
			<div class="tab-page show">
                <div class="form-group">
                    <label class="form-group-key column-1">@L("Name")</label>
                    <div class="form-group-block column-9">
                        <div class="input-wrapper line">
                            <input type="text" ng-model="vm.settings.shop.name">
                        </div>
                    </div>
                </div>
				<div class="form-group">
					<label class="form-group-key column-1">@L("Logo")</label>
					<div class="form-group-block column-9">
						<div class="picture-uploader"
							 picture-uploader
							 path="vm.settings.shop.logo"
							 data-option-url="/Manager/Home/Upload"
							 data-option-default-image="/Content/frame/canknow/image/upload-picture.png">
							<img width="96" ng-src="{{vm.settings.shop.logo}}" />
							<input type="file" />
							<input type="hidden" required ng-model="vm.settings.shop.logo" />
						</div>
					</div>
				</div>
				<div class="form-group">
					<label class="form-group-key column-1">@L("ShareTitle")</label>
					<div class="form-group-block column-9">
						<div class="input-wrapper line">
							<input type="text" ng-model="vm.settings.shop.shareTitle">
						</div>
					</div>
				</div>
				<div class="form-group">
					<label class="form-group-key column-1">@L("ShareDescription")</label>
					<div class="form-group-block column-9">
						<div class="input-wrapper line">
							<input type="text" ng-model="vm.settings.shop.shareDescription">
						</div>
					</div>
				</div>
				<div class="form-group">
					<label class="form-group-key column-1">@L("SharePicture")</label>
					<div class="form-group-block column-9">
						<div class="picture-uploader"
							 picture-uploader
							 path="vm.settings.shop.sharePicture"
							 data-option-url="/Manager/Home/Upload"
							 data-option-default-image="/Content/frame/canknow/image/upload-picture.png">
							<img width="96" ng-src="{{vm.settings.shop.sharePicture}}" />
							<input type="file" />
							<input type="hidden" required ng-model="vm.settings.shop.sharePicture" />
						</div>
					</div>
				</div>
			</div>
            <div class="tab-page hide">
                <div class="form-group">
                    <label class="form-group-key column-1">@L("DecreaseStockWhen")</label>
                    <div class="form-group-block column-9">
                        <div class="input-wrapper line">
                            <select ng-model="vm.settings.shop.decreaseStockWhen" ng-options="decreaseStockWhen.value as decreaseStockWhen.name for decreaseStockWhen in vm.decreaseStockWhens"></select>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="form-group-key column-1">@L("ShouldHasParentForBuy")</label>
                    <div class="form-group-block column-9">
                        <div class="checkbox-switcher">
                            <input type="checkbox" ng-model="vm.settings.shop.shouldHasParentForBuy">
                            <label><span class="on">@L("On")</span><span class="off">@L("Off")</span></label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="form-group-key column-1">@L("RebateGuarantee")</label>
                    <div class="form-group-block column-9">
                        <div class="checkbox-switcher">
                            <input type="checkbox" ng-model="vm.settings.shop.rebateGuarantee">
                            <label><span class="on">@L("On")</span><span class="off">@L("Off")</span></label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="form-group-key column-1">@L("AutoWithdraw")</label>
                    <div class="form-group-block column-9">
                        <div class="checkbox-switcher">
                            <input type="checkbox" ng-model="vm.settings.shop.autoWithdraw">
                            <label><span class="on">@L("On")</span><span class="off">@L("Off")</span></label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="form-group-key column-1">@L("AutoPayForWithdraw")</label>
                    <div class="form-group-block column-9">
                        <div class="checkbox-switcher">
                            <input type="checkbox" ng-model="vm.settings.shop.autoPayForWithdraw">
                            <label><span class="on">@L("On")</span><span class="off">@L("Off")</span></label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="form-group-key column-1">@L("DistributionWhen")</label>
                    <div class="form-group-block column-9">
                        <div class="input-wrapper line">
                            <select ng-model="vm.settings.shop.distributionWhen" ng-options="distributionWhen.value as distributionWhen.name for distributionWhen in vm.distributionWhens"></select>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="form-group-key column-1">@L("AutoReceiveLimit")</label>
                    <div class="form-group-block column-9">
                        <div class="input-wrapper line">
                            <input type="text" ng-model="vm.settings.shop.autoReceiveLimit">
                        </div>
                    </div>
                </div>
            </div>
			<div class="tab-page hide">
                <div class="form-group">
                    <label class="form-group-key column-1">@L("UpgradeOrderMoney")</label>
                    <div class="form-group-block column-9">
                        <div class="input-wrapper line">
                            <input type="text" ng-model="vm.settings.spread.upgradeOrderMoney">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="form-group-key column-1">@L("EnableSalesOfSelf")</label>
                    <div class="form-group-block column-9">
                        <div class="checkbox-switcher">
                            <input type="checkbox" ng-model="vm.settings.spread.enableSalesOfSelf">
                            <label><span class="on">@L("On")</span><span class="off">@L("Off")</span></label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="form-group-key column-1">@L("MustBeSpreaderForSpread")</label>
                    <div class="form-group-block column-9">
                        <div class="checkbox-switcher">
                            <input type="checkbox" ng-model="vm.settings.spread.mustBeSpreaderForSpread">
                            <label><span class="on">@L("On")</span><span class="off">@L("Off")</span></label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="form-group-key column-1">@L("MustBeAgencyToGetSpreadPoster")</label>
                    <div class="form-group-block column-9">
                        <div class="checkbox-switcher">
                            <input type="checkbox" ng-model="vm.settings.spread.mustBeAgencyToGetSpreadPoster">
                            <label><span class="on">@L("On")</span><span class="off">@L("Off")</span></label>
                        </div>
                    </div>
                </div>
			</div>
		</div>
	</form>
	<button class="button-text block primary" ng-click="vm.saveAll()">@L("SaveAll")</button>
</div>