<div ng-controller="app.mobile.order.index as vm" class="ng-cloak" ng-cloak>
	<div class="tab mobile-tab flex-tab margin-bottom-1">
		<ul class="tab-nav-list">
			<li ng-class="{'actived':vm.orderStatus==1}">
				<a ng-click="vm.getOrders(1)">@L("UnPay")</a>
			</li>
			<li ng-class="{'actived':vm.orderStatus==2}">
				<a ng-click="vm.getOrders(2)">@L("UnShip")</a>
			</li>
			<li ng-class="{'actived':vm.orderStatus==3}">
				<a ng-click="vm.getOrders(3)">@L("Shipped")</a>
			</li>
			<li ng-class="{'actived':vm.orderStatus==4}">
				<a ng-click="vm.getOrders(4)">@L("Received")</a>
			</li>
		</ul>
	</div>
	<div class="blank" ng-if="vm.isLoaded&&(!vm.orders||!vm.orders.length)">@L("ThereIsNoItem")</div>
	<ul class="order-list" id="ordersList">
		<li ng-repeat="order in vm.orders">
			<a href="/Mobile/Order/Detail?id={{order.id}}">
				<div class="order-header">
					<h3 class="order-number">{{order.number}}</h3>
					<label class="order-status">{{order.statusText|localize}}</label>
				</div>
				<ul class="media-list order-item-list" ng-if="order.orderItems.length">
					<li ng-repeat="orderItem in order.orderItems">
						<div class="media-item order-item">
							<div class="title-picture-box">
								<img width="64" class="title-picture" ng-src="{{orderItem.specification.picture}}">
							</div>
							<div class="body">
								<h5 class="title">
									{{orderItem.specification.fullName}}
								</h5>
								<div class="property">
									<span class="price"><small class="price-sign">￥</small>{{orderItem.price}}</span>
								</div>
							</div>
						</div>
						<div class="price-block">
							<div class="money-block">
								@L("TotalMoney")<label class="money"><small class="price-sign">￥</small>{{orderItem.money}}</label>
							</div>
						</div>
					</li>
				</ul>
			</a>
		</li>
	</ul>
</div>