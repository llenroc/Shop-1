<div ng-controller="app.mobile.score.index as vm" ng-cloak class="ng-cloak">
	<div class="data-preview">
		<h3>@L("Balance")</h3>
		<label class="main-data" ng-bind="vm.scoreInfo.balance">0</label>
		<a class="detail" href="@Url.Action("Index","ScoreRecord")">@L("ViewScoreRecords")</a>
	</div>
	<div class="additional-data-block">
		<ul class="additional-data-list">
			<li>
				<label class="title">@L("Total")</label>
				<label class="value" ng-bind="vm.scoreInfo.total">0</label>
			</li>
		</ul>
	</div>
    <div class="container">
        <a class="button-text block primary" href="/Mobile/ScoreShop/Index">@L("ScoreShop")</a>
    </div>
</div>