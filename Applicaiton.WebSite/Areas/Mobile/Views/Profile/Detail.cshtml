<div class="margin-top-1 ng-cloak" ng-controller="app.mobile.profile.detail as vm" ng-cloak>
    <form class="mobile-form" name="userDetailForm" novalidate>
        <div class="form-group">
            <label class="form-group-key">@L("FullName")</label>
            <div class="form-group-block">
                <div class="input-wrapper large">
                    <input type="text" name="fullName" ng-model="vm.userDetail.fullName" required>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="form-group-key">@L("PhoneNumber")</label>
            <div class="form-group-block">
                <div class="input-wrapper large">
                    <input type="tel" name="phoneNumber" ng-model="vm.userDetail.phoneNumber" required>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="form-group-key">@L("WechatName")</label>
            <div class="form-group-block">
                <div class="input-wrapper large">
                    <input type="tel" name="wechatName" ng-model="vm.userDetail.wechatName" required>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="form-group-key">@L("IdentityNumber")</label>
            <div class="form-group-block">
                <div class="input-wrapper large">
                    <input type="tel" name="wechatName" ng-model="vm.userDetail.identityNumber" required>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="form-group-key">@L("Qrcode")</label>
            <div class="form-group-block padding-1">
                <div class="picture-uploader"
                     picture-uploader path="vm.userDetail.qrcodePath"
                     data-option-url="/Mobile/Home/Upload?ratio=1&maxFileSize=512000"
                     data-option-default-image="/Content/frame/canknow/image/upload-picture.png">
                    <img height="96" ng-src="{{vm.userDetail.qrcodePath}}" />
                    <input type="file" />
                    <input type="hidden" name="qrcodePath" ng-model="vm.userDetail.qrcodePath" />
                </div>
            </div>
        </div>
        <div class="container">
            <button type="submit" ng-disabled="userDetailForm.$invalid" class="button-text primary block" ng-click="vm.save()">@L("Save")</button>
        </div>
    </form>
</div>