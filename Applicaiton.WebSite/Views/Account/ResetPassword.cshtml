@using System.Web.Script.Serialization
@using Infrastructure.Web.Mvc.Extensions
@model Application.WebSite.Models.Account.ResetPasswordViewModel
<div class="container-responsive padding-1">
    <form class="form-vertical" action="@Url.Action("ResetPassword")" method="post">
        @Html.AntiForgeryToken()
        <h3>@L("ChangePassword")</h3>
        <p>
            @L("PleaseEnterYourNewPassword")
        </p>
        <input type="hidden" name="TenantId" value="@Model.TenantId">
        <input type="hidden" name="UserId" value="@Model.UserId">
        <input type="hidden" name="ResetCode" value="@Model.ResetCode">
        <div class="form-group">
            <label class="form-group-key">@L("Password")</label>
            <div class="form-group-block">
                <div class="input-wrapper">
                    <input type="password" autocomplete="off" placeholder="@L("Password")" name="Password" required />
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="form-group-key">@L("PasswordRepeat")</label>
            <div class="form-group-block">
                <div class="input-wrapper">
                    <input type="password" autocomplete="off" placeholder="@L("PasswordRepeat")" name="PasswordRepeat" required />
                </div>
            </div>
        </div>
        <button type="submit" class="button-text block primary">@L("Submit")</button>
    </form>
</div>
